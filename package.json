{
  "scripts": {
    "start": "concurrently \"bundle exec jekyll serve\" \"npm run watch:css\"",
    "build": "npx tailwindcss -i ./assets/css/style.css -o ./assets/dist-style.css",
    "build-css": "postcss ./assets/css/styles.css -o ./assets/dist-style.css",
    "watch:css": "postcss ./assets/css/styles.css -o ./assets/dist-style.css --watch",
    "watch": "npx tailwindcss -i ./assets/css/style.css -o ./assets/dist-style.css --watch"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.16",
    "postcss": "^8.4.33",
    "postcss-cli": "^11.0.0",
    "postcss-import": "^16.0.0",
    "postcss-nesting": "^12.0.0",
    "tailwindcss": "^3.4.1"
  },
  "dependencies": {
    "@alpinejs/persist": "^3.12.3",
    "@tailwindcss/forms": "^0.5.3",
    "@tailwindcss/typography": "^0.5.10",
    "alpinejs": "^3.12.3",
    "concurrently": "^8.2.2",
    "postcss-nested": "^6.0.1"
  }
}
